<?php

ini_set("memory_limit", "16M");

session_start();
ob_start();

$APPLICATION_PATH = str_replace("\\", "/", getcwd());
$APPLICATION_ROOT = explode('/', $APPLICATION_PATH)[count(explode('/', $APPLICATION_PATH)) - 1];

require_once('configuration/database/initialize');
require_once('core/string_helper_functions.php');

spl_autoload_register(function($object) 
{
    require_once("models/{$object}.php");
});
